               <image>
                  <Image url="@../image/jobs-08-256.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER">
               <children>
                  <Label text="账号：">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="account" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="密码：">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="password" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="login" mnemonicParsing="false" onAction="#login" prefWidth="80.0" text="登陆" />
